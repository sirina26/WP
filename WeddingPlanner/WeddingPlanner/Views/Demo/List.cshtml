@model IEnumerable<WeddingPlanner.WebApp.Models.DemoViewModels.DemoEventViewModel>

<h1>Liste des classes (@Model.Count())</h1>

<div asp-validation-summary="All"></div>

<a href="/Demo/Edit">Ajouter une classe</a>

<table>
    <tr>
        <td>Id</td>
        <td>Nom</td>
        <td>Niveau</td>
        <td>Options</td>
    </tr>

    @foreach( var m in Model )
    {
        <tr>
            <td>@m.ClassId</td>
            <td>
                <a href="/Demo/Edit/@m.ClassId">
                    @m.Name
                </a>
            </td>
            <td>@m.Level</td>
            <td><a href="/Demo/Delete/@m.ClassId">Supprimer</a></td>
        </tr>
    }

    @if(Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Il n'y a pas de classes.</td>
        </tr>
    }
</table>
