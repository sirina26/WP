@using WeddingPlanner.WebApp.Models.AccountViewModels

@model RegisterViewModel

@{
    ViewData["Title"] = "Créer un nouveau compte";
}

<div class="container">
    <h2 class="my-4">@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="Register" method="post">
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <div class="form-group">
            <label asp-for="FirstName">FirstName : </label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>

        </div>

        <div class="form-group">

            <label asp-for="LastName">LastName : </label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">E-mail : </label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Mot de passe : </label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Répétez le mot de passe : </label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <p>Inscrire tant que :</p>

        <div class="form-check">
            
            <input class="form-check-input" type="radio" name="UserType" id="organizer" value="organizer" checked>
            <label class="form-check-label" for="organizer">
                organisateur
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="UserType" id="customer" value="customer">
            <label class="form-check-label" for="customer">
                client
            </label>
        </div>

        <button type="submit" class="btn btn-primary btn-block">S'enregistrer</button>
    </form>
</div>
